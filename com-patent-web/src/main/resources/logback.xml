<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<configuration scan="true" debug="false">
	<property name="log.base" value="${catalina.base}/logs/hgts" />
	<property name="pattern"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%C.java:%L] - %msg%n" />
	<property name="msgpattern" value="%msg%n" />
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder charset="utf-8">
			<pattern>${pattern}</pattern>
			<outputPatternAsHeader>false</outputPatternAsHeader>
		</encoder>
	</appender>
	<appender name="log"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.base}/hgts-api.run.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.base}/hgts-api.run.log.%d{yyyyMMdd}
			</fileNamePattern>
		</rollingPolicy>
		<encoder charset="utf-8">
			<pattern>${pattern}</pattern>
			<outputPatternAsHeader>false</outputPatternAsHeader>
		</encoder>
	</appender>
	<appender name="error"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.base}/hgts-api.error.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.base}/hgts-api.error.log.%d{yyyyMMdd}</fileNamePattern>
		</rollingPolicy>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>error</level>
		</filter>
		<encoder charset="utf-8">
			<pattern>${pattern}</pattern>
			<outputPatternAsHeader>false</outputPatternAsHeader>
		</encoder>
	</appender>
	<logger name="io.watch" level="info" additivity="false">
		<appender-ref ref="log" />
		<appender-ref ref="error" />
		<appender-ref ref="stdout" />
	</logger>
	<root level="info">
		<appender-ref ref="log" />
		<appender-ref ref="error" />
		<appender-ref ref="stdout" />
	</root>
</configuration>  