<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>


<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd        
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.2.xsd
     	http://www.springframework.org/schema/aop  
     	http://www.springframework.org/schema/aop/spring-aop-4.2.xsd
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc.xsd">
		
	<context:component-scan base-package="org.patent" />
	<context:annotation-config />
	<mvc:default-servlet-handler />
	<aop:aspectj-autoproxy proxy-target-class="true" />
	<mvc:annotation-driven>
		<mvc:message-converters register-defaults="true">
            <bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>text/html;charset=UTF-8</value>
                        <value>application/json</value>
                    </list>
                </property>
                <property name="features">
                    <list>
                    	<!-- 输出key时是否使用双引号 -->  
                        <value>QuoteFieldNames</value>
                    	<!-- 是否输出值为null的字段,默认为false -->   
                        <value>WriteMapNullValue</value>
                        <!-- List字段如果为null,输出为[],而非null -->  
                        <value>WriteNullListAsEmpty</value>
                        <!-- Date的日期转换器 -->
                        <value>WriteDateUseDateFormat</value>
                        <!-- 禁用fastjson循环引用检测 -->
						<value>DisableCircularReferenceDetect</value>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
	</mvc:annotation-driven>
	
	<!-- API请求过滤-->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/api/**" />
			<ref bean="authorizationInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>
	
	<!-- SpringMVC文件上传大小过滤 50M-->
	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="52428800" />
	</bean>
	<!-- SpringMVC文件上传大小过滤 -->
	
	<!-- 环信消息过滤链层 -->
	 <bean id="easemobHolder" class="org.patent.easemob.ext.EasemobHolder" factory-method="custom" init-method="init" destroy-method="dispose">
	        <property name="filters">
	              <list>
	                  <!-- 按此顺序加载过滤 -->
	                  <!-- 历史消息拆分 -->
	                  <bean class="org.patent.easemob.filter.MessageWarperFilter"/>
	                  <!-- 发送前处理历史消息  -->
	                  <bean class="org.patent.easemob.filter.HojyHisotryMessageFilter"/>
	                  <!-- 发送成功后,处理历史消息  -->
	                  <bean class="org.patent.easemob.filter.EaseCmdMessageFilter"/>
	              </list>
	        </property>
	        
	        
	    <!--      <property name="senderListener">
	            <bean class="io.watch.mqtt.plugin.HojyMqttSenderListener"/>
	        </property>-->
	 </bean>
	 
</beans>
